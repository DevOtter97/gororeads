rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /readings/{readingId} {
      // Allow read/write only if the user is authenticated and the data belongs to them
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // For creating, check if the incoming data userId matches the auth uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // For updating/deleting, check if the existing resource userId matches the auth uid
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
